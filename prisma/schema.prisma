generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas = ["public", "auth"]
}

enum UserRole {
      ADMIN
      USER
        @@schema("auth")
    }

enum UserStatus {
  ACTIVE
  INACTIVE

  @@schema("auth")
}

model User {
  id    String @id @default(uuid())
  username String  @unique
  password String 
  role UserRole @default(USER)
  status UserStatus @default(ACTIVE)
  
  @@schema("auth")
}

model Session {
  id        String    @id @default(cuid())
  sid       String    @unique
  data      String    @db.Text
  expiresAt DateTime?

  @@schema("auth")
}